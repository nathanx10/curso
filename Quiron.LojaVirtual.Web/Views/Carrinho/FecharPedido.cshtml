@model Quiron.LojaVirtual.Dominio.Entidades.Pedido
@{
    ViewBag.Title = "Quiron: Fechar o Pedido";
}

<h2>Fechar o pedido</h2>

<p>Digite suas informações abaixo</p>

@using (@Html.BeginForm())
{
    @Html.ValidationSummary()

    <h3>Enviar para</h3>

    <div class="form-group">
        @Html.LabelFor(x => x.NomeCliente)
        @Html.TextBoxFor(x => x.NomeCliente, new { @class = "form-control" })
    </div>

    <h3>Dados para entrega</h3>

    foreach (var property in ViewData.ModelMetadata.Properties)
    {
        if (property.PropertyName != "EmbrulharPresente" && property.PropertyName != "NomeCliente")
        {
            <div class="form-group">
                @Html.Label(property.DisplayName ?? property.PropertyName)
                @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
            </div>
        }
    }

    <h3>Opções</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.EmbrulharPresente)
            @Html.LabelFor(x => x.EmbrulharPresente)
        </label>
    </div>

    <input class="btn btn-primary" type="submit" value="Fechar o pedido" />
}
