@model Quiron.LojaVirtual.Dominio.Entidades.Produto

@{
    ViewBag.Title = "ProdutosDetalhes";
}

<div class="well">

    @if(Model.Imagem != null)
    {
        <div class="pull-left" style="margin-right:10px">
            <img class="img-thumbnail" width="120" height="120" src="@Url.Action("ObterImagem", "Vitrine", new { Model.ProdutoId})" />

        </div>
    }

    <h3><strong>@Model.Nome</strong></h3>
    <h3><span class="pull-right left label label-primary">@Model.Preco.ToString("c")</span></h3>

    @using (Html.BeginForm("Adicionar", "Carrinho"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.ProdutoId)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery) @*retorna a url atual*@ 


            <input type="submit" class="btn btn-success" value="Comprar" />
        </div>

    }

    <span class="lead">@Model.Descricao</span>
</div>


